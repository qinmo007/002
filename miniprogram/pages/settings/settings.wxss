/* 早餐店模拟器 - 设置页面样式 */

/* 基础样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 加载中样式 */
.loading-screen {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 顶部信息栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.setting-label text {
  font-size: 30rpx;
  color: #333;
}

.setting-control {
  display: flex;
  align-items: center;
}

/* 选择器样式 */
.picker-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

/* 其他操作 */
.other-actions {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  display: flex;
  align-items: center;
  background-color: transparent;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: left;
  border-radius: 0;
}

.action-btn:last-child {
  border-bottom: none;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.action-btn text {
  font-size: 30rpx;
  color: #333;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx 0;
}

.version-info text {
  font-size: 24rpx;
  color: #999;
}

/* 动画效果 */
@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.back-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.action-btn:active {
  background-color: #f8f8f8;
}
